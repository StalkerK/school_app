<h1>Галерея</h1>

  <head>
  <script src="<%= javascript_path('galleria.classic.min.js') %>" ></script>
  <script src="<%= javascript_path('galleria-1.4.2.min.js') %>" ></script>

  <style>
    #galleria{ width: 900px; height: 500px; background: #000 }

  </style>

  </head>
  <tbody>
  <table>
    <div id="galleria">
    <% @uploads.each do |upload| %>
        <%= image_tag(upload.uploaded_file(:original), class: 'thumb') %>
        <% end %>


        <tr>
        <% @uploads.each do |upload| %>
        <%= image_tag(upload.uploaded_file(:thumb), class: 'thumb') %>
        </tr>
  
        <%= link_to 'Show', upload %>
        <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %>
        
      
  <% end %>
   
    
  </tbody>
  <script>
        Galleria.loadTheme("<%= javascript_path('galleria.classic.min.js') %>");
        Galleria.run("#galleria");

</script>
</table>

