<div class="hero-unit">
  <center>
<h3>Галерея</h3>

  <script src="<%= javascript_path('galleria-1.4.2.min.js') %>" ></script>
  <script src="<%= javascript_path('galleria.classic.min.js') %>" ></script>
  

    
             <div class="galleria">
      <% @uploads.each do |upload| %>
          <%= image_tag(upload.uploaded_file(:original), class: 'thumb') %>
          <% end %>
            </div>

      <script>
        Galleria.loadTheme("<%= javascript_path('galleria.classic.min.js') %>");
        if ($("#galleria").length == 1) {
        Galleria.run(".galleria", { height: parseInt($('.gallery').css('height')), wait: true });
      }
      </script>

         <br>
         
          <% if signed_in? %>
          <% @uploads.each do |upload| %>
        <div class="preview">
          <%= image_tag(upload.uploaded_file(:thumb), class: 'thumb') %>
          <br>
          <%= link_to image_tag('writing.png', width: '15', height: '10', title: 'Редагувати'), upload %>
          <%= link_to image_tag('delete_128x128.png', width: '15', height: '10', title: 'Видалити'), upload, method: :delete, data: { confirm: 'Ви впевнені?' } %>
        </div>
      <% end %>
    <% end %>
<br>
<% if signed_in? %>
<%= link_to image_tag('download.png', width: '30', height: '20', title: 'Завантажити фото'), new_upload_path, :class => 'btn btn-small' %>
<% end %>
</center>
</div>