
<% if post.photo? %> 
<%= image_tag post.photo.url(:medium) %>
<%end%>
 <%= raw post.body %>
<center>
 <% if signed_in? %>
 <%= link_to image_tag('writing.png', width: '20', height: '15', title: 'Редагувати'), edit_static_page_post_path(post.static_page, post), :class => 'btn btn-small' %>
 <%= link_to image_tag('delete_128x128.png', width: '20', height: '15', title: 'Видалити'), [post.static_page, post],:class => 'btn btn-small', method: :delete, data: { confirm: 'Ви впевнені?' } %>
 <% end %>
  <hr>
</center>
